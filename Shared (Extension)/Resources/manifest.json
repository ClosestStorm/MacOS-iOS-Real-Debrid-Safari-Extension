{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "Real Debrid",
    "description": "__MSG_description__",
    "default_locale": "en",
    "version": "1.4 Safari Macos/ios Extension",
    "author": "Converted By RWBritton",
    "homepage_url": "https://real-debrid.com/",
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["js/background.js"]
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "activeTab",
        "clipboardWrite",
        "contextMenus",
        "storage",
		"notifications"
    ],
    "content_scripts" : [ {
        "matches" : ["http://*/*", "https://*/*"],
        "js" : ["js/parser.js"]
    } ],
    "browser_action": {
        "default_icon": "img/icon128.png",
        "default_popup": "view/popup.html"
    }
}
